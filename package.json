{
  "name": "blog",
  "version": "1.0.0",
  "description": "My mini-blog",
  "main": "index.html",
  "scripts": {
    "test-firefox": "sudo ./scripts/start.sh; cypress run --headless --browser firefox --env host=http://localhost:4000",
    "test-chrome": "sudo ./scripts/start.sh; cypress run --headless --browser chrome --env host=http://localhost:4000",
    "test": "npm run test-firefox && npm run test-chrome",
    "test-firefox-prod": "cypress run --headless --browser firefox --env host=https://dawidkotarba.github.io/blog",
    "test-chrome-prod": "cypress run --headless --browser chrome --env host=https://dawidkotarba.github.io/blog",
    "test-prod": "npm run test-firefox-prod && npm run test-chrome-prod",
    "cypress": "sudo ./scripts/restart.sh && cypress open --env host=http://localhost:4000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dawidkotarba/blog.git"
  },
  "author": "Dawid Kotarba",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dawidkotarba/blog/issues"
  },
  "homepage": "https://github.com/dawidkotarba/blog#readme",
  "devDependencies": {
    "cypress": "^4.2.0"
  }
}
